
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:controller="com.robertovecchio.controller.Controller"
          fx:id="gridRoot"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          vgap="20">

    <Button fx:id="companyButton"
            prefWidth="160"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.halignment="CENTER">

        <graphic>
            <ImageView>
                <Image url="@/toolbarButtonGraphics/navigation/Home24.gif"/>
            </ImageView>
        </graphic>

    </Button>

    <Button fx:id="userButton"
            prefWidth="160"
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.halignment="CENTER">

        <graphic>
            <ImageView>
                <Image url="@/toolbarButtonGraphics/general/About24.gif"/>
            </ImageView>
        </graphic>
    </Button>

</GridPane>