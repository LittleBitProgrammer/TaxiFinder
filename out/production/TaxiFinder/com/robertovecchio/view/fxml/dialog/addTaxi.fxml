<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.robertovecchio.controller.dialog.AddTaxiController"
            headerText="Riempi i campi per aggiungere un Taxi"
            prefHeight="400.0"
            prefWidth="600.0">
