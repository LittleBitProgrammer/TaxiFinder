<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.robertovecchio.controller.dialog.RemoveTaxiDriverController"
            headerText="Seleziona il tassista da congedare"
            prefHeight="400.0"
            prefWidth="600.0">
    <content>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Tassista"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>

            <ComboBox GridPane.rowIndex="0"
                      GridPane.columnIndex="1"
                      fx:id="taxiDriverComboBox"/>

            <Label text="Codice fiscale"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <TextField editable="false"
                       fx:id="fiscalCodeField"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

            <Label text="Nome"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <TextField editable="false"
                       fx:id="nameField"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

            <Label text="Cognome"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="0"/>

            <TextField editable="false"
                       fx:id="surnameField"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="1"/>

            <Label text="Data di nascita"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="0"/>

            <DatePicker editable="false"
                        fx:id="dateOfBirthField"
                        GridPane.rowIndex="4"
                        GridPane.columnIndex="1"/>

            <Label text="Genere"
                   GridPane.rowIndex="5"
                   GridPane.columnIndex="0"/>

            <TextField editable="false"
                       fx:id="genreField"
                       GridPane.rowIndex="5"
                       GridPane.columnIndex="1"/>

            <Label text="Targa Taxi"
                   GridPane.rowIndex="6"
                   GridPane.columnIndex="0"/>

            <TextField editable="false"
                       fx:id="licensePlateField"
                       GridPane.rowIndex="6"
                       GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
