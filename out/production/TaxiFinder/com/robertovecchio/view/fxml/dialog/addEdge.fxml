<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.robertovecchio.controller.dialog.AddEdgeController"
            headerText="Aggiungi Collegamento"
            prefHeight="400.0" prefWidth="600.0">
    <content>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Seleziona un collegamento"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="4"/>

            <Label text="Da: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="fromComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="A: " GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <ComboBox fx:id="toComboBox" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        </GridPane>
    </content>
</DialogPane>
