<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.robertovecchio.controller.dialog.OrderController"
            headerText="Effettua una prenotazione"
            prefHeight="400.0" prefWidth="600.0">
    <content>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Dove vuoi attendere: "
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>

            <ComboBox fx:id="fromComboBox"
                      GridPane.rowIndex="1"
                      GridPane.columnIndex="0"/>

            <Label text="Dove vuoi arrivare: "
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <ComboBox fx:id="toComboBox"
                      GridPane.rowIndex="3"
                      GridPane.columnIndex="0"/>
        </GridPane>
    </content>
</DialogPane>
