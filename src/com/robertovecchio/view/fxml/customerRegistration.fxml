<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.robertovecchio.controller.CustomerRegistrationController">
    <top>
        <ToolBar>
            <HBox>
                <Button text="Indietro" onAction="#handleBackButton" fx:id="backButton">
                    <tooltip>
                        <Tooltip text="Torna indietro"/>
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/navigation/Back16.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </ToolBar>
    </top>
    <center>
        <GridPane hgap="40" alignment="CENTER" vgap="20">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <GridPane GridPane.rowIndex="0"
                      GridPane.columnIndex="0"
                      GridPane.columnSpan="2"
                      alignment="CENTER"
                      vgap="10">
                <ImageView fx:id="userImage"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="0"
                           GridPane.halignment="CENTER"/>

                <Label text="Registrazione"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"
                       textFill="#494949">
                    <font>
                        <Font name="helvetica bold" size="30"/>
                    </font>
                </Label>
            </GridPane>

            <GridPane alignment="CENTER_RIGHT"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="0" hgap="10" vgap="20">

                <Label text="Codice Fiscale: "
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: VCCRRT..."
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="1"
                           fx:id="fiscalCodeField"/>

                <Label text="Cognome: "
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: Vecchio"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"
                           fx:id="surnameField"/>

                <Label text="Genere: "
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0"/>

                <ComboBox promptText="es: Uomo"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"
                           prefWidth="390"
                           fx:id="genreField"/>

                <Label text="Username: "
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: Roberto93"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"
                           fx:id="usernameField"/>

                <Label text="Numero di Telefono: "
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: 3283844389"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"
                           fx:id="phoneField"/>
            </GridPane>

            <GridPane alignment="CENTER_LEFT"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="1" hgap="10" vgap="20">

                <Label text="Nome: "
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: Roberto"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="1"
                           fx:id="nameField"/>

                <Label text="Data di nascita: "
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>

                <DatePicker promptText="es: 01/01/1993"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"
                            fx:id="dateOfBirthField"
                            prefWidth="400"/>

                <Label text="Email: "
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0"/>

                <TextField promptText="es: test@gmail.com"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"
                           fx:id="emailField"/>

                <Label text="Password: "
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="0"/>

                <PasswordField promptText="es: 123"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"
                           fx:id="passwordField"/>

                <Label text="Accetta condizioni:"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="0"/>

                <CheckBox GridPane.rowIndex="4"
                          GridPane.columnIndex="1"
                          GridPane.halignment="RIGHT"
                          prefHeight="25"
                          fx:id="informationField"/>
            </GridPane>

            <Button text="Registrati"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="0"
                    GridPane.columnSpan="2"
                    GridPane.halignment="CENTER"
                    prefWidth="1070"
                    onAction="#handleRegistration"
                    fx:id="registerButton">
                <graphic>
                    <ImageView>
                        <Image url="@/toolbarButtonGraphics/general/Save24.gif"/>
                    </ImageView>
                </graphic>
            </Button>

        </GridPane>
    </center>
</BorderPane>